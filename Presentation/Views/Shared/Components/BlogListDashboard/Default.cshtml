@model System.Collections.Generic.List<Entity.Concrete.Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table table-primary table-bordered table-hover text-center">
                        <thead>
                        <tr>
                            <th>  </th>
                            <th> Başlık </th>
                            <th> Tarih </th>
                            <th> Kategori </th>
                            <th> Detaylar </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.BlogImage" class="mr-2 border border-primary" alt="image"/>
                                </td>
                                <td>
                                    @item.BlogTitle
                                </td>
                                <td> @item.BlogCreateDate.ToString("dd MMM yyyy") </td>
                                <td>
                                    <label class="badge badge-gradient-primary">@item.Category.CategoryName</label>
                                </td>
                                <td>
                                    <a class="btn btn-gradient-dark" href="~/Blog/BlogDetails/@item.BlogId">Detaylar</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>