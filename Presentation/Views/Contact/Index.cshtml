@{
    ViewBag.Title = "title";
    Layout = "UserLayout";
}


    <link href="~/web/css/style.css" rel='stylesheet' type='text/css'/>
<link href="~/web/css/contact.css" rel='stylesheet' type='text/css'/>

<body>
<section class="main-content-w3layouts-agileits">

    <h3 class="tittle">Bize Ulaşın</h3>
    <p class="sub text-center">Düşünceleriniz bizim için çok önemli</p>
    <div class="contact-map inner-sec">

        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d391771.367609911!2d32.48257982641939!3d39.90303941891153!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d347d520732db1%3A0xbdc57b0c0842b8d!2sAnkara!5e0!3m2!1str!2str!4v1633536516610!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
    <div class="ad-inf-sec bg-light">
        <div class="container">
            <div class="address row">

                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="far fa-map"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Adres</h6>
                            <p>
                                Anlara, Türkiye

                            </p>
                        </div>
                    </div>

                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="far fa-envelope"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Mail</h6>
                            <p>
                                <a href="mailto:example@email.com"> torukobyte@example.com</a>
                            </p>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Phone</h6>
                            <p>+90 234 567 8901</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="contact_grid_right">
            <form method="post">
                <div class="row contact_left_grid">
                    <div class="col-md-6 con-left">
                        <div class="form-group">
                            <label>Adınız Soyadınız</label>
                            <input class="form-control" name="ContactUserName" placeholder="" required="" type="text">
                        </div>
                        <div class="form-group">
                            <label>E-Posta Adresi</label>
                            <input class="form-control" name="ContactMail" placeholder="" required="" type="email">
                        </div>
                        <div class="form-group">
                            <label>Konu</label>
                            <input class="form-control" name="ContactSubject" placeholder="" required="" type="text">
                        </div>
                    </div>
                    <div class="col-md-6 con-right">
                        <div class="form-group">
                            <label for="textarea">Mesaj</label>
                            <textarea id="textarea" name="ContactMessage" placeholder=""></textarea>
                        </div>
                        <input class="form-control" type="submit" value="Submit">

                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
</body>